<div class="new-note-container">
  <button class="save-button waves-effect waves-light btn" {{action "saveNote"}}>
    Save
  </button>

  {{#link-to "notes" class="discard-button waves-effect waves-light btn"}}
    Discard
  {{/link-to}}

  {{input
    value=noteTitle
    class="note-title"
    autofocus="true"
    placeholder="Title"
  }}

  {{textarea
    value=noteText
    class="note-text-area"
    cols="50"
    rows="20"
    placeholder="Start Typing Here"
  }}
</div>